<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:screenOrientation="portrait">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:weightSum="10">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_00"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:padding="@dimen/dim_00"
            app:title="@string/create_account"
            app:titleTextColor="@color/labelrecyclerview"
        />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:padding="@dimen/dim_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_15"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/sign_up_text"
                        android:textColor="@color/labelrecyclerview"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_20"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20">

                    <EditText
                        android:id="@+id/accountFName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_borderline"
                        android:hint="@string/fname_placeholder"
                        android:inputType="textCapWords"
                        android:padding="@dimen/dim_10"

                        android:textColor="@color/labelrecyclerview"
                        android:textSize="@dimen/dim_15"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_15"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:background="#ffffff"
                        android:textColor="@color/labelrecyclerview"

                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05"
                        android:text="@string/fname_placeholder" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dim_20"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20">

                    <EditText
                        android:id="@+id/accountLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_borderline"
                        android:hint="@string/lname_placeholder"
                        android:inputType="textCapSentences"
                        android:padding="@dimen/dim_10"
                        android:textSize="@dimen/dim_15"
                        android:textColor="@color/labelrecyclerview"

                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_15"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:background="#ffffff"
                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05"
                        android:textColor="@color/labelrecyclerview"

                        android:text="@string/lname_placeholder" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dim_20"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20">

                    <EditText
                        android:id="@+id/numberEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_borderline"
                        android:hint="@string/phone_number_placeholder"
                        android:inputType="phone"
                        android:padding="@dimen/dim_10"
                        android:maxLength="10"
                        android:textColor="@color/labelrecyclerview"

                        android:textSize="@dimen/dim_15"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_15"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:background="#ffffff"
                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05"
                        android:textColor="@color/labelrecyclerview"

                        android:text="@string/phone_number_placeholder" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dim_20"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20">

                    <EditText
                        android:id="@+id/emailEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_borderline"
                        android:hint="@string/email_placeholder"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/labelrecyclerview"

                        android:padding="@dimen/dim_10"
                        android:textSize="@dimen/dim_15"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_15"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:background="#ffffff"
                        android:paddingStart="@dimen/dim_05"
                        android:textColor="@color/labelrecyclerview"

                        android:paddingEnd="@dimen/dim_05"
                        android:text="@string/email_placeholder" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_20"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20">

                    <EditText
                        android:id="@+id/passwordEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_borderline"
                        android:hint="@string/password_hint"
                        android:inputType="textPassword"
                        android:padding="@dimen/dim_10"
                        android:textSize="@dimen/dim_15"
                        android:textColor="@color/labelrecyclerview"

                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_15"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:background="#ffffff"
                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05"
                        android:textColor="@color/labelrecyclerview"

                        android:text="@string/password_placeholder" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_20"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20">

                    <EditText
                        android:id="@+id/retypeEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_borderline"
                        android:hint="@string/password_hint"
                        android:inputType="textPassword"
                        android:padding="@dimen/dim_10"
                        android:textColor="@color/labelrecyclerview"

                        android:textSize="@dimen/dim_15"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_15"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:background="#ffffff"
                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05"
                        android:textColor="@color/labelrecyclerview"

                        android:text="@string/confirm_password_placeholder" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/authFailed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dim_05"
                    android:visibility="gone"
                    android:paddingEnd="@dimen/dim_05">

                    <TextView
                        android:id="@+id/accountError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/dim_00"
                        android:gravity="center"
                        android:text="@string/sign_in_text"
                        android:textColor="@color/error"
                        android:textSize="@dimen/dim_15"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/dim_20"
                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/signup"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@drawable/login_border_theme"
                            android:paddingStart="@dimen/dim_40"
                            android:paddingEnd="@dimen/dim_40"
                            android:text="@string/sign_up"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/dim_20"
                    android:paddingEnd="@dimen/dim_20"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/dim_20"
                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@drawable/green_round_button"
                            android:paddingStart="@dimen/dim_40"
                            android:paddingEnd="@dimen/dim_40"
                            android:text="@string/sign_up"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/Login_avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:indicatorColor="@color/newtheme_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:indicatorName="LineScalePulseOutIndicator" />
</androidx.constraintlayout.widget.ConstraintLayout>